<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.horace.repository.MenuRepository">
    <select id="findAll" resultType="com.horace.entity.Menu">
        select * from t_menu limit #{param1},#{param2}
    </select>

    <select id="count" resultType="int">
        select count(id) from t_menu
    </select>
    
    <select id="findById" parameterType="long" resultType="com.horace.entity.Menu">
        select * from t_menu where id=#{id}
    </select>
    
</mapper>